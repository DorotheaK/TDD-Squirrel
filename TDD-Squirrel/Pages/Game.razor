@page "/game"
@using TDD_Squirrel.Components
<h3>Schlange-Leiter-Spiel</h3>

<h4>Aufgabe 1</h4>
<div>
    <ul>
        <li>Anzahl Spielfelder: @NumberOfFields</li>
        <li>Spielfigur rückt um die gewürfelte Anzahl Felder vor</li>
        <li>Ist das Ziel erreicht, ist ein Würfeln nicht mehr möglich</li>
    </ul>
</div>
<h5>Spielbrett</h5>

<button @onclick="MovePiece" disabled="@DisabledDie">Die</button>

<div>
    @for(var rowIndex = 1; rowIndex < NumberOfRows + 1; rowIndex++)
    {
        var localRowIndex = rowIndex;
        <div>
            @for (var fieldIndex = 1; fieldIndex < NumberOfFields + 1; fieldIndex++)
            {
                var localFieldIndex = fieldIndex;
                <Field>
                    @if (localFieldIndex == PiecePosition && localRowIndex == 1)
                    {
                        <div class="field-content">
                            <GameFigure></GameFigure>
                        </div>
                    }
                </Field>
            }
        </div>
    }
</div>