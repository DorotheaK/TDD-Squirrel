@if (_winnerId is not null)
{
    <div class="modal fade show d-block" id="exampleModal" tabindex="-1">
        <div class="modal-dialog">
            <div class="modal-content">
                <div class="modal-header">
                    <h5 class="modal-title" id="titleLabel">Spiel beendet</h5>
                </div>
                <div class="modal-body">
                    <div class="col row">
                        <div class="notification">
                            Spieler:in @_winnerId hat gewonnen - Herzlichen Glückwunsch!
                        </div>
                    </div>
                    <button type="button" class="btn btn-outline-primary" @onclick="@Close">Close</button>
                </div>
            </div>
        </div>
    </div>
}
